  "keywords": [
    "hashtree",
    "nostr",
    "webrtc",
    "p2p",
    "merkle"
  ],
  "author": "Martti Malmi",
  "license": "MIT",
  "dependencies": {
    "@hashtree/core": "workspace:*",
    "@msgpack/msgpack": "^3.1.2",
    "nostr-tools": "^2.18.2"
  },
  "devDependencies": {
    "@nostr-dev-kit/ndk": "^2.18.1",
    "@types/ws": "^8.18.1",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "ws": "^8.18.3"
  }
}
