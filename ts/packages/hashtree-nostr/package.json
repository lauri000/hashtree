{
  "name": "@hashtree/nostr",
  "version": "0.1.1",
  "description": "Nostr integration for hashtree - WebRTC P2P store and ref resolver",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
