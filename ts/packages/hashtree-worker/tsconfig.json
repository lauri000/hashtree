{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "ndk": ["./src/iris/shims.d.ts"],
      "ndk-cache": ["./src/iris/shims.d.ts"],
      "nostr-social-graph": ["./src/iris/shims.d.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "DOM", "WebWorker"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
