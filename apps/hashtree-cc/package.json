{
  "name": "hashtree-cc",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "description": "hashtree.cc - decentralized file sharing & developer tools",
  "type": "module",
  "scripts": {
    "build:deps": "pnpm --dir ../../ts --filter @hashtree/core build && pnpm --dir ../../ts --filter @hashtree/dexie build && pnpm --dir ../../ts --filter @hashtree/nostr build && pnpm --dir ../../ts --filter @hashtree/worker build",
    "dev": "pnpm run build:deps && vite",
    "build": "pnpm run build:deps && vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@hashtree/core": "workspace:*",
    "@hashtree/nostr": "workspace:*",
    "@hashtree/worker": "workspace:*",
    "minidenticons": "^4.2.1",
    "nostr-tools": "^2.18.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.75",
    "@playwright/test": "^1.50.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/qrcode": "^1.5.6",
    "@unocss/preset-icons": "^66.5.9",
    "svelte": "^5.16.0",
    "typescript": "^5.3.0",
    "unocss": "^66.5.9",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-precaching": "^7.4.0",
    "workbox-window": "^7.4.0"
  }
}
